{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "target": "es2017",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "module": "commonjs",
    "noImplicitAny": false,
    "alwaysStrict": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "out",
    "strictNullChecks": true,
    "allowUnreachableCode": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    ".vscode-test"
  ]
}